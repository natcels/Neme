                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="User" Width="18" Height="18" />
                    <TextBlock Text="Joseph" FontSize="18"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="User" Width="18" Height="18" />
                    <TextBlock Text="Jude" FontSize="18"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem Background="Transparent">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="User" Width="18" Height="18" />
                    <TextBlock Text="James" FontSize="18"/>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
        
    </Grid>
</Page>
