<Window x:Class="Neme.Views.InviteUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neme.Views"
             mc:Ignorable="d" 
        Title="Invite Collaborator"
        WindowStartupLocation="CenterScreen"
             d:DesignHeight="200" d:DesignWidth="400"
             Background="White"            
             >
    <Grid Margin="20">
        <StackPanel>
                <TextBlock Text="Enter Username to Invite:" Margin="0,0,0,10"/>
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
                <Button Content="Invite" Width="100" HorizontalAlignment="Right" Click="InviteButton_Click"/>
            </StackPanel>

    </Grid>
    
</Window>
