<UserControl x:Class="Neme.Views.KanbanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neme.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <Storyboard x:Key="FadeInDialog">
            <DoubleAnimation Storyboard.TargetName="DialogOverlay"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="0:0:0.3" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- To Do Column -->
        <StackPanel Grid.Column="0" Background="LemonChiffon">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="StackPanel.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                 From="50" To="0"
                                 Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
            <StackPanel.RenderTransform>
                <TranslateTransform X="50" />
            </StackPanel.RenderTransform>
            <TextBlock Text="To Do" FontWeight="Bold" Margin="10"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                       />
            <ListBox x:Name="ToDoList"
                     ItemsSource="{Binding ToDoTasks}"
                      Style="{StaticResource MaterialDesignListBox}"
                      MouseMove="TaskList_MouseMove"
                     MinHeight="400"
                     AllowDrop="True"
                     DragOver="TaskList_DragOver"
                     Drop="TaskList_Drop">
                <ListBox.Triggers>
                    <EventTrigger RoutedEvent="Drop">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ListBox.Background).(SolidColorBrush.Color)"
                                To="#FFE0F7FA" Duration="0:0:0.3" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ListBox.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
            Padding="10" Margin="10"
            CornerRadius="10"
            RenderTransformOrigin="0.5,0.5"
                                Width="250"
                                MinHeight="50">
                            <Border.RenderTransform>
                                <TranslateTransform Y="30" />
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                         From="30" To="0"
                                         Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <StackPanel>
                                    <TextBlock Text="{Binding TaskName}" FontSize="14" FontWeight="Bold"/>

                                <TextBlock Text="{Binding Status}"
                                        TextWrapping="Wrap"   FontSize="12" Foreground="Gray"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Start:" FontSize="10" FontWeight="Bold" />
                                    <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="10" Foreground="Green" Margin="10 0 0 0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="End:" FontSize="10" FontWeight="Bold" />
                                    <TextBlock Margin="15 0 0 0" Text="{Binding EndDate, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="10" Foreground="Red"/>
                                </StackPanel>
                                
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
 
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Add Task" Click="AddTask_Click" Margin="10"  Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>

        <!-- In Progress Column -->
        <StackPanel Grid.Column="1" Background="#FCF8E3" >
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="StackPanel.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                 From="50" To="0"
                                 Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
            <StackPanel.RenderTransform>
                <TranslateTransform X="50" />
            </StackPanel.RenderTransform>
            <TextBlock Text="In Progress" FontWeight="Bold" FontSize="16" Margin="5"/>
            <ListBox x:Name="InProgressList"
                     ItemsSource="{Binding InProgressTasks}"
                     AllowDrop="True"
                     MinHeight="400"
                      MouseMove="TaskList_MouseMove"
                     DragOver="TaskList_DragOver"
                     Drop="TaskList_Drop">
                <ListBox.Triggers>
                    <EventTrigger RoutedEvent="Drop">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ListBox.Background).(SolidColorBrush.Color)"
                                To="#FFE0F7FA" Duration="0:0:0.3" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ListBox.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
Padding="5" Margin="5"
CornerRadius="5"
RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform Y="30" />
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             From="30" To="0"
                             Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <StackPanel>
                                <TextBlock Text="{Binding TaskName}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Status}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>

                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Completed Column -->
        <StackPanel Grid.Column="2" Background="#D9EDF7">
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="StackPanel.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                 From="50" To="0"
                                 Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </StackPanel.Triggers>
            <StackPanel.RenderTransform>
                <TranslateTransform X="50" />
            </StackPanel.RenderTransform>
            <TextBlock Text="Completed" FontWeight="Bold" FontSize="16" Margin="5"/>
            <ListBox x:Name="CompletedList"
                     ItemsSource="{Binding CompletedTasks}"
                     AllowDrop="True"
                     MinHeight="400"
                      MouseMove="TaskList_MouseMove"
                     DragOver="TaskList_DragOver"
                     Drop="TaskList_Drop">
                <ListBox.Triggers>
                    <EventTrigger RoutedEvent="Drop">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ListBox.Background).(SolidColorBrush.Color)"
                                To="#FFE0F7FA" Duration="0:0:0.3" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ListBox.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
Padding="5" Margin="5"
CornerRadius="5"
RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TranslateTransform Y="30" />
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             From="30" To="0"
                             Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <StackPanel>
                                <TextBlock Text="{Binding TaskName}" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Status}" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>

                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <!-- Overlay dialog -->
        <Grid 
            x:Name="DialogOverlay" Background="#80000000"
          Grid.ColumnSpan="3"
          Visibility="Collapsed"  
          Opacity="0"
          IsHitTestVisible="False"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Panel.ZIndex="10">
            <local:AddTaskDialog
                x:Name="AddTaskDialogControl"
                             Width="400"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center" />

        </Grid>
    </Grid>
</UserControl>
    