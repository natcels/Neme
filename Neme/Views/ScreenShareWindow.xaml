<UserControl x:Class="Neme.Views.ScreenShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="auto" Width="auto">
    <Grid>
        <Viewbox>
            <Image Source="{Binding SharedScreenFeed}" Stretch="Uniform"/>
        </Viewbox>

        <Button Content="Stop Sharing" Command="{Binding StopScreenShareCommand}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Margin="10" Background="Red" Foreground="White"/>
    </Grid>
</UserControl>
