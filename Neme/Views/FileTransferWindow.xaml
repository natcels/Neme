<UserControl x:Class="Neme.Views.FileTransferWindow"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Neme.Views"
             mc:Ignorable="d" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="100" Width="400">
    <Grid Background="#FFF1E6E6">
        <Label Content="File Transfer Progress" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <ProgressBar Name="FileProgressBar" Width="350" Height="20" Margin="10"  />
        <TextBlock Name="ProgressText" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
