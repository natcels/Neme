    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\Icons\logo-black.ico</ApplicationIcon>
    <StartupObject>Neme.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Views\user-avatar.jpg" />
